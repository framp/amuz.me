@import 'config'

#info .container
  float left
  width 5em
  
#player
  position relative
  width 16em
  height 16em
  background-color pomegranate
  text-align center
  box-shadow 0 0 boxShadow darken(@background-color,20)
  overflow hidden

#control
  display block
  position absolute
  width 1em
  height 1em
  left 0.5em
  top 0.5em
  font-size 8em
  color lighten(alizarin,20)
  
#control:hover
  color lighten(alizarin,30)
  
#next,#prev,#volume,#repeat
  display block
  position absolute
  width 1em
  font-size 3em
  line-height 1.2em
  color lighten(alizarin,20)
#prev,#repeat
  left 0.1em
  text-align right
#next,#volume
  right 0.1em
  text-align left
#repeat,#volume
  top 0.1em
#prev,#next
  bottom 0.1em
#prev
  left 0em
#next
  right 0em

#volume
  width 1em
  height 1.87em
  top 0
  right 0
  padding-left 0.87em
  color lighten(alizarin,30)

#next:hover,#prev:hover,#volume:hover,#repeat:hover
  color lighten(alizarin,30)
  
#volumeTrack
  position absolute
  right -3.5em
  top -3.75em
  border-bottom 0.5em solid lighten(alizarin,30)
  border-left 0.2em solid lighten(alizarin,30)
  width 8em
  height 8em
  border-radius 8em  
#volumeThumb
  border-radius 0.5em
  border 0.5em solid lighten(alizarin,20)
  width 0
  position absolute
  right 0
  top 0

#info
  width 16em
  height 8em
  background-color greensea
  color white
  box-shadow 0 0 boxShadow darken(@background-color,20)
  margin-top 0
 
#progress
  width 16em
  height 1em
  background-color turquoise
  margin-bottom 1em
  overflow hidden
  border-top-left-radius boxRadius
  border-top-right-radius boxRadius

#progress-handle
  height 1em
  background-color lighten(turquoise,10)

#youtubeMask  
  position absolute
  width 4em
  height 4em
  margin-left 0.5em
  z-index 10

#youtubePlayer,#title,#position
  float left
#youtubePlayer
  width 4em
  height 4em
  margin-left 0.5em
  background #222
  z-index 100
  position relative

#title
  width 10.5em
  height 4em
  overflow hidden
  color #fff
  text-decoration none

#position
  width 5em
  text-align right
  margin-top 0.5em

  
#time
  text-align left
  float left
  margin-top 0.5em
  margin-left 0.5em
  
#social
  float right
  font-size 1.5em
  a
    margin-left 0.2em
    margin-right 0.2em
    color white